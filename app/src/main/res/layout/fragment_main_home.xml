<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linkb.mainFrag.MainHomeFragment">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="315dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="18dp"
                        android:weightSum="10"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/main_menu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_menu_24"
                            android:background="@color/colorPrimary"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:text="LinkB"
                            android:textSize="28dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosansbold"
                            android:gravity="center" />
                        <ImageButton
                            android:id="@+id/main_refresh_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_replay_24"
                            android:background="@color/colorPrimary"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal">
                        <ViewFlipper
                            android:id="@+id/image_slide"
                            android:layout_width="match_parent"
                            android:layout_height="180dp">
                        </ViewFlipper>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/indicator_line1"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:background="@color/white"/>
                        <TextView
                            android:id="@+id/indicator_line2"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:background="@color/bar_gray"/>
                        <TextView
                            android:id="@+id/indicator_line3"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:background="@color/bar_gray"/>
                        <TextView
                            android:id="@+id/indicator_line4"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:background="@color/bar_gray"/>
                        <TextView
                            android:id="@+id/indicator_line5"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:background="@color/bar_gray"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/recommend_frame"
                    android:layout_width="match_parent"
                    android:layout_height="305dp"
                    android:padding="5dp"/>
                <FrameLayout
                    android:id="@+id/select_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</FrameLayout>