<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="240dp"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.example.linkb.roundImageView.RoundImageView
            android:id="@+id/recommend_event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/recommend_event_d_day"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@color/black"
            android:fontFamily="@font/notosansmedium"
            android:gravity="center"
            android:text="D-"
            android:textColor="@color/white"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/recommend_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="7pt"
        android:textColor="@color/black"
        android:fontFamily="@font/notosansbold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/recommend_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="5pt"
        android:textColor="@color/bar_gray"
        android:fontFamily="@font/notosanslight"
        android:gravity="center"/>
</LinearLayout>