<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="188.889dp"
    android:layout_height="match_parent"
    android:paddingHorizontal="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="130">
        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="match_parent"
            android:layout_height="222.222dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/photoview_rounding"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginBottom="2dp"
                android:id="@+id/item_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="제목"
                android:gravity="center_horizontal"
                android:textSize="17.778dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginHorizontal="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="날짜"
                android:gravity="center_horizontal"
                android:textSize="14.444dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginHorizontal="5dp"
                android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
        </LinearLayout>
