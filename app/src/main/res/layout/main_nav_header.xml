<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#704591"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="59.111dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp">

                <ImageButton
                    android:id="@+id/btn_CloseDrawer"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_clear_24" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="28.889dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88.889dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/userRoundImage"
                    android:layout_width="88.889dp"
                    android:layout_height="88.889dp"
                    android:src="@drawable/ic_people" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="21.778dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73.333dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                    <LinearLayout
                        android:id="@+id/Hello_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:text="링크비" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:text=" 님," />
                    </LinearLayout>
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/Hello_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="오늘도 좋은 하루 보내세요!"
                        />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="44.889dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/main_nav_button_corner_round"
                    android:clickable="true"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_gear"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="설정"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    />
                </RelativeLayout>

                <Space
                    android:layout_width="5.556dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/main_nav_button_corner_round"
                    android:clickable="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="로그아웃"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
                
            </LinearLayout>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="52.222dp"/>




            <ListView
                android:id="@+id/main_nav_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#ffffff"
                android:dividerHeight="0dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10.3" />
    </LinearLayout>


</RelativeLayout>